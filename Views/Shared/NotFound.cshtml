@{
    ViewData["Title"] = "Not Found";
}
<div class="text-center py-5">
    <h1 class="display-6 fw-bold mb-3 text-warning">
        <i class="bi bi-signpost-2 me-2"></i> 404 — Not Found
    </h1>
    <p class="lead text-muted mb-4">
        The page or quiz you’re looking for doesn’t exist or was removed.
    </p>

    <div class="d-flex justify-content-center gap-2">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-house-door me-1"></i> Back to Home
        </a>
    </div>
</div>
