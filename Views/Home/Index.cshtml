@model IEnumerable<QuizApp.Models.Quiz>
@{
    ViewData["Title"] = "Home";

    string GetIcon(string id) => id.ToLower() switch
    {
        "mvc" => "bi-code-slash text-primary",
        "aspnet" => "bi-globe2 text-info",
        "football" => "bi-trophy text-success",
        "nature" => "bi-flower3 text-success",
        _ => "bi-book text-secondary"
    };

    string GetButtonColor(string id) => id.ToLower() switch
    {
        "mvc" => "btn-outline-primary",
        "aspnet" => "btn-outline-info",
        "football" => "btn-outline-success",
        "nature" => "btn-outline-success",
        _ => "btn-outline-secondary"
    };
}

<div class="py-4">
    <h1 class="mb-4 text-center fw-bold">
        <i class="bi bi-journals me-2"></i>Choose Your Quiz
    </h1>
    <div class="row g-4 justify-content-center">
        @foreach (var q in Model)
        {
            <div class="col-sm-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column text-center">
                        <div class="mb-3 fs-1">
                            <i class="bi @(GetIcon(q.Id))"></i>
                        </div>
                        <h5 class="card-title mb-2 fw-semibold">@q.Title</h5>
                        <p class="text-muted mb-4 small">Quiz ID: <code>@q.Id</code></p>
                        <a asp-controller="Quiz" asp-action="Index" asp-route-id="@q.Id"
                           class="btn @(GetButtonColor(q.Id)) btn-lg fw-semibold mt-auto">
                            <i class="bi bi-play-fill me-1"></i> Start
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
