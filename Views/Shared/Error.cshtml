@{
    ViewData["Title"] = "Error";
}
<div class="text-center py-5">
    <h1 class="display-5 fw-bold text-danger mb-3">
        <i class="bi bi-exclamation-triangle me-2"></i> Oops! Something went wrong
    </h1>
    <p class="lead text-muted mb-4">
        Sorry, an unexpected error occurred while processing your request.
    </p>

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-house-door me-1"></i> Back to Home
        </a>
        <a href="javascript:location.reload()" class="btn btn-light btn-lg">
            <i class="bi bi-arrow-clockwise me-1"></i> Reload Page
        </a>
    </div>
</div>
