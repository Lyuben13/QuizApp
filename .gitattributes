###############################################################################
# Normalize line endings automatically for all text files
###############################################################################
* text=auto

###############################################################################
# Treat C# files with proper diff driver (по желание)
###############################################################################
*.cs     diff=csharp

###############################################################################
# Merge settings за проектни и solution файлове
# По‑добре да се третират като binary, за да се избегнат проблеми при merge
###############################################################################
*.sln       merge=binary
*.csproj    merge=binary
*.vbproj    merge=binary
*.vcxproj   merge=binary
*.vcproj    merge=binary
*.dbproj    merge=binary
*.fsproj    merge=binary
*.lsproj    merge=binary
*.wixproj   merge=binary
*.modelproj merge=binary
*.sqlproj   merge=binary
*.wwaproj   merge=binary

###############################################################################
# Image files – винаги binary
###############################################################################
*.jpg   binary
*.jpeg  binary
*.png   binary
*.gif   binary
*.bmp   binary
*.ico   binary

###############################################################################
# Common document formats – diff като текст (ако искаш да виждаш разлики)
###############################################################################
*.doc   diff=astextplain
*.DOC   diff=astextplain
*.docx  diff=astextplain
*.DOCX  diff=astextplain
*.dot   diff=astextplain
*.DOT   diff=astextplain
*.pdf   diff=astextplain
*.PDF   diff=astextplain
*.rtf   diff=astextplain
*.RTF   diff=astextplain
