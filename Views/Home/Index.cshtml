@model IEnumerable<QuizApp.Models.Quiz>
@{
    ViewData["Title"] = "Home";
}
<div class="py-3">
    <h1 class="mb-3"><i class="bi bi-journals me-2"></i>Available Quizzes</h1>
    <div class="row g-3">
        @foreach (var q in Model)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1 fs-4">@q.Title</h5>
                        <p class="text-muted mb-4">ID: <code>@q.Id</code></p>
                        <a asp-controller="Quiz" asp-action="Index" asp-route-id="@q.Id"
                           class="btn btn-primary btn-lg mt-auto">
                            <i class="bi bi-play-fill me-1"></i> Start Quiz
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
